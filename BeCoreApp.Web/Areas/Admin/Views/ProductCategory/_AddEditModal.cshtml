<div id="modal-add-edit" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Category update</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">
                        &times;
                    </span>
                </button>
            </div>
            <div class="modal-body">
                <form id="frmMaintainance">
                    <div class="form-group">
                        <input type="hidden" id="hidIdM" value="0" />
                        <label for="txtNameM" class="form-control-label">Tiêu đề</label>
                        <input type="text" name="txtNameM" class="form-control" id="txtNameM" placeholder="Name of category">
                    </div>
                    <div class="form-group">
                        <label class="form-control-label">Loại cha</label>
                        <input id="ddlCategoryIdM" class="form-control" name="ddlCategoryIdM"  value="">
                    </div>
                    <div class="form-group">
                        <label for="txtAliasM" class="form-control-label">Alias</label>
                        <input type="text" name="txtAliasM" class="form-control" id="txtAliasM">
                    </div>
                    <div class="form-group">
                        <label for="txtDescM" class="form-control-label">Description</label>
                        <textarea rows="3" name="txtDescM" class="form-control" id="txtDescM"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="txtOrderM" class="form-control-label">Sort Order</label>
                        <input type="number" name="txtOrderM" class="form-control" id="txtOrderM">
                    </div>
                    <div class="form-group">
                        <label for="txtHomeOrderM" class="form-control-label">Home Order</label>
                        <input type="number" name="txtHomeOrderM" class="form-control" id="txtHomeOrderM">
                    </div>
                    <div class="form-group">
                        <label for="txtImageM" class="form-control-label">Images</label>
                        <div class="input-group">
                            <input type="text" name="txtImage" class="form-control" id="txtImage" />
                            <input type="file" id="fileInputImage" style="display:none" />
                            <span class="input-group-btn">
                                <input type="button" id="btnSelectImg" class="btn btn-default" value="Browser" />
                            </span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="txtSeoPageTitleM" class="form-control-label">SEO Title</label>
                        <input type="text" name="txtSeoPageTitleM" class="form-control" id="txtSeoPageTitleM">
                    </div>
                    <div class="form-group">
                        <label for="txtSeoAliasM" class="form-control-label">URL SEO</label>
                        <input type="text" name="txtSeoAliasM" class="form-control" id="txtSeoAliasM">
                    </div>
                    <div class="form-group">
                        <label for="txtSeoKeywordM" class="form-control-labelt">SEO Keyword</label>
                        <input type="text" name="txtSeoKeywordM" class="form-control" id="txtSeoKeywordM">
                    </div>
                    <div class="form-group">
                        <label for="txtSeoDescriptionM" class="form-control-label">SEO Description</label>
                        <textarea rows="3" name="txtSeoDescriptionM" class="form-control" id="txtSeoDescriptionM"></textarea>
                    </div>
                    <div class="form-group">
                        <label class="form-control-label">
                            <input type="checkbox" checked="checked" id="ckStatusM">
                            <span class="text">Active.</span>
                        </label>
                        <label class="form-control-label">
                            <input type="checkbox" id="ckShowHomeM">
                            <span class="text">Show on home.</span>
                        </label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnCancel" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" id="btnSave" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>