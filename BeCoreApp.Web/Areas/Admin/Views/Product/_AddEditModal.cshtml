<div id="modal-add-edit" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                    Thêm & cập nhật sản phẩm
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">
                        &times;
                    </span>
                </button>
            </div>
            <div class="modal-body">
                <form id="frmMaintainance">
                    <div class="form-group">
                        <input type="hidden" id="hidIdM" value="0" />
                        <label for="txtNameM" class="form-control-label">Tiêu đề sản phẩm</label>
                        <input type="text" name="txtNameM" class="form-control" id="txtNameM">
                    </div>
                    <div class="form-group">
                        <label class="form-control-label">Loại sản phẩm</label>
                        <input id="ddlCategoryIdM" class="form-control" name="ddlCategoryIdM" value="">
                    </div>
                    <div class="form-group">
                        <label for="txtDescM" class="form-control-label">Chú thích</label>
                        <textarea rows="4" name="txtDescM" class="form-control" id="txtDescM"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="txtUnitM" class="form-control-label">Đơn vị</label>
                        <input type="text" name="txtUnitM" class="form-control" id="txtUnitM">
                    </div>
                    <div class="form-group">
                        <label class="form-control-label">Giá Nhập</label>
                        <input type="text" name="txtOriginalPriceM" class="form-control" id="txtOriginalPriceM">
                    </div>
                    <div class="form-group">
                        <label class="form-control-label">Giá Bán</label>
                        <input type="text" name="txtPriceM" class="form-control" id="txtPriceM">
                    </div>
                    <div class="form-group">
                        <label class="form-control-label">Giá Khuyến Mãi</label>
                        <input type="text" name="txtPromotionPriceM" class="form-control" id="txtPromotionPriceM">
                    </div>
                    <div class="form-group">
                        <label for="txtImageM" class="form-control-label">Image</label>
                        <div class="input-group">
                            <input type="text" name="txtImage" class="form-control" id="txtImageM" />
                            <input type="file" id="fileInputImage" style="display:none" />
                            <span class="input-group-btn">
                                <input type="button" id="btnSelectImg" class="btn btn-default" value="Browser" />
                            </span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="txtContentM" class="form-control-label">Content</label>
                        <textarea id="txtContent" rows="6" class="form-control"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="txtMetakeywordM" class="form-control-label">SEO title</label>
                        <input type="text" name="txtSeoPageTitleM" class="form-control" id="txtSeoPageTitleM">
                    </div>
                    <div class="form-group">
                        <label for="txtSeoAliasM" class="form-control-label">SEO Url</label>
                        <input type="text" name="txtSeoAliasM" class="form-control" id="txtSeoAliasM">
                    </div>
                    <div class="form-group">
                        <label for="txtMetakeywordM" class="form-control-label">SEO Keywords</label>
                        <input type="text" name="txtMetakeywordM" class="form-control" id="txtMetakeywordM">
                    </div>
                    <div class="form-group">
                        <label for="txtMetaDescriptionM" class="form-control-label">SEO Description</label>
                        <textarea rows="3" name="txtMetaDescriptionM" class="form-control" id="txtMetaDescriptionM"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="txtTagM" class="form-control-label">Tag (separated by comma)</label>
                        <input type="text" name="txtTagM" class="form-control" id="txtTagM">
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label class="form-control-label">
                                <input type="checkbox" checked="checked" id="ckStatusM">
                                <span class="text">Active.</span>
                            </label>
                            <label class="form-control-label">
                                <input type="checkbox" id="ckHotM">
                                <span class="text">Hot product</span>
                            </label>
                            <label class="form-control-label">
                                <input type="checkbox" checked="checked" id="ckShowHomeM">
                                <span class="text">Show on home</span>
                            </label>
                        </div>
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnCancel" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                <button type="button" id="btnSave" class="btn btn-success">Lưu</button>
            </div>
        </div>
    </div>
</div>